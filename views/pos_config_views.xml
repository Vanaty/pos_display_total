<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.form.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pos_interface']" position="after">
                <group string="External API Configuration">
                    <field name="api_base_url" placeholder="http://localhost:5000"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
